// example with real A record
// A record should point to the IP address of the root server
// In this case, the root server is centcom, not the caddy container
//
// sub.domain.com {
//   tls rsefer@gmail.com
//   reverse_proxy https://subdomain.spaniel-dragon.ts.net:443 {
//     transport http {
//       tls_insecure_skip_verify
//     }
//   }
// }
//
// example for spoofed DNS entries (ie. no actual A record)
//
// sub.domain.com {
//   tls internal
//   reverse_proxy https://subdomain.spaniel-dragon.ts.net:443 {
//     transport http {
//       tls_insecure_skip_verify
//     }
//   }
// }

:80 {
  respond "Hello, world from the main Caddyfile"
}

rss.vpn.rsefer.com {
  tls rsefer@gmail.com
  reverse_proxy https://rss.spaniel-dragon.ts.net:443 {
    transport http {
      tls_insecure_skip_verify
    }
  }
}

ha.vpn.rsefer.com {
  tls rsefer@gmail.com
  reverse_proxy https://home-assistant.spaniel-dragon.ts.net:443 {
    transport http {
      tls_insecure_skip_verify
    }
  }
}

go.vpn.rsefer.com {
  tls rsefer@gmail.com
  reverse_proxy https://go.spaniel-dragon.ts.net:443 {
    transport http {
      tls_insecure_skip_verify
    }
  }
}
